<Window x:Class="Synth.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Synth"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                <TextBlock Text="Waveform:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox Name="WaveformSelector" Width="100" SelectedIndex="0">
                    <ComboBoxItem Content="Sine"/>
                    <ComboBoxItem Content="Square"/>
                    <ComboBoxItem Content="Saw"/>
                </ComboBox>
            </StackPanel>
            <TextBlock Text="Virtual Synth" FontSize="20" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="C" Width="60" Margin="5" Click="Key_Click"/>
                <Button Content="D" Width="60" Margin="5" Click="Key_Click"/>
                <Button Content="E" Width="60" Margin="5" Click="Key_Click"/>
                <Button Content="F" Width="60" Margin="5" Click="Key_Click"/>
                <Button Content="G" Width="60" Margin="5" Click="Key_Click"/>
                <Button Content="A" Width="60" Margin="5" Click="Key_Click"/>
                <Button Content="B" Width="60" Margin="5" Click="Key_Click"/>
            </StackPanel>
            <Slider Name="VolumeSlider" Minimum="0" Maximum="100" Value="25" Width="200" Margin="0,20,0,0" ValueChanged="VolumeSlider_ValueChanged"/>
        </StackPanel>
    </Grid>
</Window>
